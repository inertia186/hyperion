!!!
%html
  %head
    %meta{content: 'text/html; charset=UTF-8', 'http-equiv' => 'Content-Type'}
    %meta{content: 'width=device-width, initial-scale=0.80, maximum-scale=1.0, user-scalable=no', name: 'viewport'}
    = favicon_link_tag 'favicon.svg', rel: 'shortcut icon', type: 'image/svg'
    = favicon_link_tag 'favicon.svg', rel: 'apple-touch-icon', type: 'image/svg'
    %title Hyperion
    = csrf_meta_tags
    = csp_meta_tag
    %script{src: "https://cdn.jsdelivr.net/npm/@hiveio/hive-js/dist/hive.min.js"}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    .d-flex.float-right
      .ml-auto.p-2
        - if !!current_account
          .float-right
            = link_to posts_path author: current_account.name do
              = image_tag 'data:image/gif;base64,R0lGODdhAQABAPAAAMPDwwAAACwAAAAAAQABAAACAkQBADs=', class: 'lazyload img-thumbnail rounded-circle mw-100', style: 'width: 48px;', data: {src: "https://images.hive.blog/u/#{current_account.name}/avatar"}
            = link_to session_path(current_account.name), method: :delete, class: 'btn btn-outline-dark' do
              Log Out
              = icon('box-arrow-right')
        
            = form_tag toggle_mutes_posts_path, method: :patch, class: 'form-inline' do
              = hidden_field_tag :sort, @sort, id: nil
              = hidden_field_tag :limit, @limit, id: nil
              = hidden_field_tag :tag, @tag, id: nil
              .custom-control.custom-switch
                %input#toggle-mutes.custom-control-input{checked: !!session[:muted_authors_enabled], type: 'checkbox', onclick: '$("#toggle-mutes").prop("disabled", true); this.form.submit();'}
                %label.custom-control-label{for: 'toggle-mutes'} Enable Mute

        -# .p-4= render partial: 'dashboard/quick_stats'

    .container
      .row
        .col-12
          = yield
